<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LumGlare"
        mc:Ignorable="d"
        Title="Lum Map UGR Calculation" Height="481" Width="528" ResizeMode="NoResize">
    <Grid Margin="5,0,5,5">
        <GroupBox x:Name="groupBox1" Header="GroupBox" HorizontalAlignment="Left" Height="100" Margin="10,161,0,0" VerticalAlignment="Top" Width="404">
            <Grid Margin="0" Height="70" VerticalAlignment="Bottom">
                <Label x:Name="label2" Content="W" HorizontalAlignment="Left" Height="23" Margin="275,-1,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="5,0"/>
                <TextBox x:Name="imgWidth" HorizontalAlignment="Left" Height="23" Margin="302,0,0,0" TextWrapping="Wrap" Text="18.6253" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy9" Content="mm" HorizontalAlignment="Left" Height="23" Margin="350,-2,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label x:Name="label2_Copy" Content="H" HorizontalAlignment="Left" Height="23" Margin="275,26,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="5,0" Width="22"/>
                <TextBox x:Name="imgHeight" HorizontalAlignment="Left" Height="23" Margin="302,27,0,0" TextWrapping="Wrap" Text="24.8697" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy10" Content="mm" HorizontalAlignment="Left" Height="23" Margin="350,26,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label x:Name="label" Content="Minimal Mesh Ω" HorizontalAlignment="Left" Height="27" Margin="6,-3,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="minStrOut" HorizontalAlignment="Left" Height="23" Margin="114,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            </Grid>
        </GroupBox>

        <GroupBox x:Name="groupBox" Header="Pinhole Lum Meshes" Height="70" Margin="5,268,5,0" VerticalAlignment="Top">
            <Grid Margin="0">
                <ComboBox x:Name="meshList" HorizontalAlignment="Left" Height="23" Margin="5,13,0,0" VerticalAlignment="Top" Width="384"/>
                <Button x:Name="refreshMeshListBtn" Content="Refresh" HorizontalAlignment="Left" Height="23" Margin="400,13,0,0" VerticalAlignment="Top" Width="79"/>
            </Grid>
        </GroupBox>
        <Button x:Name="test" Content="Calculate UGR" HorizontalAlignment="Left" Margin="415,411,0,0" Height="27" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Background Luminance" HorizontalAlignment="Left" Height="27" Margin="10,377,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="backLumIn" HorizontalAlignment="Left" Height="27" Margin="201,377,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="label_Copy1" Content="Calculated UGR" HorizontalAlignment="Left" Margin="10,410,0,0" Height="31" VerticalAlignment="Top"/>
        <TextBox x:Name="ugrOut" HorizontalAlignment="Left" Height="27" Margin="201,409,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <Label x:Name="strStat" Content="sr" HorizontalAlignment="Left" Height="27" Margin="32,221,0,0" VerticalAlignment="Top" Width="215"/>
        <Label x:Name="strStat_Copy" Content="cd/m^2" HorizontalAlignment="Left" Height="27" Margin="278,378,0,0" VerticalAlignment="Top"/>
        <GroupBox x:Name="Mesh" Header="Mesh Settings" HorizontalAlignment="Left" Height="146" Margin="5,10,0,0" VerticalAlignment="Top" Width="213" Padding="0">
            <Grid Margin="0,0,0,0">
                <TextBox x:Name="xNum" HorizontalAlignment="Left" Height="23" Margin="33,11,0,0" TextWrapping="Wrap" Text="320" VerticalAlignment="Top" Width="38" HorizontalContentAlignment="Center"/>
                <Label x:Name="label1" Content="X" HorizontalAlignment="Left" Height="23" Margin="5,9,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="5,0"/>
                <Label x:Name="label_Copy2" Content="Bins" HorizontalAlignment="Left" Height="23" Margin="76,9,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="5,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="yNum" HorizontalAlignment="Left" Height="23" Margin="33,39,0,0" TextWrapping="Wrap" Text="200" VerticalAlignment="Top" Width="38" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy3" Content="Y" HorizontalAlignment="Left" Height="23" Margin="5,37,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="5,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label x:Name="label_Copy4" Content="Bins" HorizontalAlignment="Left" Height="23" Margin="76,37,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy5" Content="Work Distance" HorizontalAlignment="Left" Height="23" Margin="5,67,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="5,0"/>
                <TextBox x:Name="workDist" HorizontalAlignment="Left" Height="23" Margin="107,69,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy6" Content="mm" HorizontalAlignment="Left" Height="23" Margin="162,67,5,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy7" Content="Aperture Size" HorizontalAlignment="Left" Height="23" Margin="5,95,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="5,0" ScrollViewer.CanContentScroll="True"/>
                <TextBox x:Name="apSize" HorizontalAlignment="Left" Height="23" Margin="107,97,0,0" TextWrapping="Wrap" Text="0.02" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy8" Content="mm" HorizontalAlignment="Left" Height="23" Margin="162,95,5,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="Mesh_Copy" Header="Camera Settings" HorizontalAlignment="Left" Height="146" Margin="223,10,0,0" VerticalAlignment="Top" Width="287" Padding="0">
            <Grid Margin="0,0,0,0">
                <TextBox x:Name="fov" HorizontalAlignment="Left" Height="23" Margin="103,10,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
                <Label x:Name="label3" Content="FoV" HorizontalAlignment="Left" Height="23" Margin="5,9,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy11" Content="Degrees" Height="23" Margin="158,9,5,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="lookD" HorizontalAlignment="Left" Height="23" Margin="103,38,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy12" Content="Look Distance" HorizontalAlignment="Left" Height="23" Margin="5,37,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy13" Content="W:H" HorizontalAlignment="Left" Height="23" Margin="5,65,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="5,0"/>
                <TextBox x:Name="arW" HorizontalAlignment="Left" Height="23" Margin="103,66,0,0" TextWrapping="Wrap" Text="4" VerticalAlignment="Top" Width="38" HorizontalContentAlignment="Center"/>
                <Label x:Name="label_Copy14" Content="mm" HorizontalAlignment="Left" Height="23" Margin="158,37,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" VerticalContentAlignment="Center" Padding="5,0"/>
                <TextBox x:Name="arH" HorizontalAlignment="Left" Height="23" Margin="146,66,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="38" HorizontalContentAlignment="Center"/>
            </Grid>
        </GroupBox>
        <Button x:Name="create" Content="Create" HorizontalAlignment="Left" Height="23" Margin="426,221,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.292,-1.293"/>
        <Button x:Name="reset" Content="Reset" HorizontalAlignment="Left" Height="23" Margin="426,192,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
